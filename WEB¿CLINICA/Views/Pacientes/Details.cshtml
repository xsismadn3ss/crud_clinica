@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@model CLINICA_CRUD.Models.Paciente

@{
    ViewData["Title"] = "Detalles";
}

@if (SignInManager.IsSignedIn(User))
{
    <h1>Detalles</h1>

    <div>
        <hr />
        <dl class="row">
            <div>
                <h2>Paciente</h2>
            </div>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Apelido)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Apelido)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Edad)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Edad)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Sexo)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Sexo)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Telefono)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Telefono)
            </dd>

            <br />
            <h2>Responsable</h2>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.NombreResponsable)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.NombreResponsable)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ApellidoResponsable)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ApellidoResponsable)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.TelefonoResponsable)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.TelefonoResponsable)
            </dd>
        </dl>
    </div>
    <div>
        <a class="boton editar" style="margin:0px 10px 0px 0px" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
        <a asp-action="Index">Volver al listado</a>
    </div>
}
else
{
    <h1 class="mensaje">Uste no se ha identificado</h1>
    <h4>Por favor inicie sesión para acceder a este apartado</h4>
    <img src="~/css/pagina bloqueda.png" style="width:400px;height:400px;">
}


