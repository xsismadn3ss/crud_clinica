@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@model CLINICA_CRUD.Models.Discapacidad

@{
    ViewData["Title"] = "Delete";
}
@if (SignInManager.IsSignedIn(User))
{

    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Discapacidad</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.discapacidad)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.discapacidad)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="boton eliminar" style="margin:10px 10px 10px 0px" />
            <a asp-action="Index">Volver al listado</a>
        </form>
    </div>
}
else
{
    <h1 class="mensaje">Uste no se ha identificado</h1>
    <h4>Por favor inicie sesión para acceder a este apartado</h4>
    <img src="~/css/pagina bloqueda.png" style="width:400px;height:400px;">
}
