@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Inicio";
}


@if (SignInManager.IsSignedIn(User))
{
    <h1 class="inicio">Bienvenido</h1>
    <center>
        <img class="img2" src="~/css/clinica_inicio.png" style="width:550px;height:550px;">
    </center>
    <p style="text-align:center;font-size:20px;">
        <br>
        ¡Todo listo para empezar a añadir registros!
    </p>
}
else
{
    <h1 style="color:red; text-align:center;font-family:'Cambria Math'; font-size:60px;">Iniciar sesión</h1>
    <center>
        <img class="img4" src="~/css/iniciar sesion.png" style="width:500px;height:500px;">
    </center>

    <p style="text-align:center;font-size:20px;">
        <br>
        En esta página podra manipular la información para guardar datos de tu clínica. <br />
        Si no lo has realizado, por favor inicia sesión para acceder a más apartados.
    </p>
}